<div class="container-fluid">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag("ethereumbitcoin.jpg", class: "d-block w-80 img-fluid") %>
        <div class="carousel-caption d-none d-md-block leitbild-text">
          <h1>Your Personal Crypto Dashboard</h1>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag("Bitcoin.jpg", class: "d-block w-50 img-fluid") %>
        <div class="carousel-caption d-none d-md-block leitbild-text">
          <h1>Bitcoin</h1>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag("ethereum.jpeg", class: "d-block w-50 img-fluid") %>
        <div class="carousel-caption d-none d-md-block leitbild-text">
          <h1>Ethereum</h1>
        </div>
      </div>
      <div class="carousel-item">
        <%= image_tag("trending.jpeg", class: "d-block w-50 img-fluid") %>
        <div class="carousel-caption d-none d-md-block leitbild-text">
          <h1>Twitter Trend Analysis</h1>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
