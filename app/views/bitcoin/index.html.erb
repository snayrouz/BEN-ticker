<h1>Historical Bitcoin Trade</h1>
<%= will_paginate @bitcoins %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date: </th>
      <th>Open: </th>
      <th>High: </th>
      <th>Low: </th>
      <th>Close: </th>
      <th>Volume: </th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @bitcoins.each do |bitcoin| %>
      <td><%= bitcoin.date %></td>
      <td><%= bitcoin.open %></td>
      <td><%= bitcoin.high %></td>
      <td><%= bitcoin.close %></td>
      <td><%= bitcoin.volume %></td>
    </tr>
    <% end %>
</tbody>

</table>
<%= will_paginate @bitcoins %>
