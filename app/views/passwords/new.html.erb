<body class="bg-light">
  <div class="container">
    <p>Please enter your email associated with your account to receive a confirmation code to enter on the next page.</p>
      <div class="form-group", style="width:50%;">
        <%= form_for(:password, url: password_reset_path) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control"  %>
          </div>
        <%= f.submit "Get Confirmation Code", class: "btn btn-default" %>
  <% end %>
</div>
</div>
</body>
