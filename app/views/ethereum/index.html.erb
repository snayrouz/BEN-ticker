  <hr>
  <h3>Average High Price By Year</h3>
    <%= line_chart charts_ethereum_avg_eth_high_yearly_path, refresh: 60 %>
  <hr>
  <% cache(charts_ethereum_avg_eth_low_monthly_path, expires_in: 6.hours) do %>
  <h3>Average Low Price By Month</h3>
    <%= line_chart charts_ethereum_avg_eth_low_monthly_path, refresh: 60 %>
    <% end %>
  <hr>
  <h3>Average Low Price By Year</h3>
    <%= line_chart charts_ethereum_avg_eth_low_yearly_path, refresh: 60 %>
  <hr>
  <% cache(charts_ethereum_avg_eth_close_monthly_path, expires_in: 6.hours) do %>
  <h3>Average Closing Price By Month</h3>
    <%= line_chart charts_ethereum_avg_eth_close_monthly_path, refresh: 60 %>
    <% end %>
  <hr>
  <h3>Average Closing Price By Year</h3>
    <%= line_chart charts_ethereum_avg_eth_close_yearly_path, refresh: 60 %>
</div>
