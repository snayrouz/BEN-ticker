<%= render partial: 'layouts/navbar' %>
<div class="content-wrapper container">
  <h1>Ethereum Historical Data</h1>
  <hr>
  <% cache(charts_ethereum_avg_eth_open_monthly_path, expires_in: 6.hours) do %>
  <h3>Average Open Price By Month</h3>
    <%= line_chart charts_ethereum_avg_eth_open_monthly_path, refresh: 60 %>
    <% end %>
  <hr>
  <h3>Average Open Price By Year</h3>
    <%= line_chart charts_ethereum_avg_eth_open_yearly_path, refresh: 60 %>
  <hr>
